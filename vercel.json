{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist-react/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/dist/index.js" },
    { "src": "/(.*)", "dest": "frontend/dist-react/$1" }
  ],
  "ignoreBuildStep": true
}
